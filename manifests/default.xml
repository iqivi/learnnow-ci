<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <!-- Default Git settings -->
    <remote
        name="github"
        fetch="git@github.com:iqivi/" />

    <default
        remote="github"
        revision="main" />

    <!-- CI repo (checked out at root / ) -->
    <project
        name="learnnow-ci"
        path="."
        groups="ci" />

    <!-- Frontend -->
    <project
        name="learnnow-webapp"
        path="frontend" />

    <!-- Backend -->
    <project
        name="learnnow-backend"
        path="backend" />

    <!-- Database service -->
    <project
        name="learnnow-db"
        path="db" />

</manifest>
